WindowTitle {Volume}
WindowSize  88 23
Font "xft:cozette:size=8"

Init
 Begin
  Set $Volume = (GetOutput {exec fvwm-status-volume} 1 -1)

  ChangeTitle 1 $Volume
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 5)==0 Then
  Begin
   Set $Volume = (GetOutput {exec fvwm-status-volume} 1 -1)

   ChangeTitle 1 $Volume
  End
End

Widget 1
Property
 Position 0 0
 Size 88 23
 Font "xft:cozette:size=8"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

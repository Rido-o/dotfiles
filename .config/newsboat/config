auto-reload yes
reload-time 10
browser "$HOME/.local/bin/scripts/newsboat-browser"

bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key o open-in-browser-and-mark-read
bind-key O open-all-unread-in-browser-and-mark-read

#     Element    fground bground
color background white black # background
color listnormal white black # unfocused and read list looks like
color listfocus black green # focused read list
color info black blue # top and bottom status bars
color listfocus_unread black green bold
color listnormal_unread blue black bold

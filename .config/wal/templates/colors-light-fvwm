##############
# 3: Colorsets
##############

# fg = Foreground
# bg = Background
# hi = Highlight
# sh = Shadow

# Titlebar
## Inactive  titlebar
Colorset 100  fg {background}, bg {color8}, hi, sh, Plain, NoShape
## Active titlebar
Colorset 101  fg {background}, bg {foreground}, hi, sh, Plain, NoShape
## Inactive  buttons
Colorset 102  fg {background}, bg {color8}, hi, sh, Plain, NoShape
## Active buttons
Colorset 103  fg {background}, bg {foreground}, hi, sh, Plain, NoShape

# Window Borders
## Inactive window borders
Colorset 110  fg black, bg #4d4d4d, hi, sh, Plain, NoShape
## Active window borders
Colorset 111  fg black, bg #2d2d2d, hi, sh, Plain, NoShape

# Menu
## Inactive menu item
Colorset 120  fg {background}, bg {foreground}, hi, sh, Plain, NoShape
## Active menu item
Colorset 121  fg {foreground}, bg {color2}, hi, sh, Plain, NoShape
## Greyed menu item
Colorset 122  fg {color8}, bg {background}, hi, sh, Plain, NoShape
## Menu title
Colorset 123  fg {foreground}, bg {color1}, hi, sh, Plain, NoShape

# Rightpanel
## Rightpanel inactive
Colorset 130 fg {background}, bg {foreground}, hi, sh, Plain, NoShape, TiledPixmap line.png, Alpha 5
## Rightpanel active (hovered)
Colorset 131 fg {foreground}, bg {color2}, hi, sh, Plain, NoShape
## Rightpanel highlight
Colorset 132 fg {foreground}, bg {color1}, hi, sh, Plain, NoShape

# Modules
## FvwmPager active page
Colorset 140 fg {foreground}, bg {color2}, hi, sh, Plain, NoShape
## FvwmScript bar widgets
Colorset 141 fg {color1}, bg {color2}, hi, sh, Plain, NoShape, TiledPixmap dot.png, Alpha 10

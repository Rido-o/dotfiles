#!/bin/bash

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -n floatcenter -g 120x50 stig ;;
esac

# Get upload and download speeds
speeds=($(transmission-remote -l | tail -n 1 | awk '{print$(NF-1), $NF}'))

# Format speeds correctly
speed () {
	rate=$(echo ${speeds[$1]} | sd "\..*" "")
	if [ ${#rate} -ge 4 ]
		then
			echo $rate | sd "(.)(.).." '${1}.${2}M'
		else
			echo "$rate""k"
	fi
}

up=$(speed 0)
down=$(speed 1)

runhost=$1

case $runhost in
	dwm) echo "^C5^↑$up ↓$down" ;;
	fvwm) echo "↑$up ↓$down" ;;
esac

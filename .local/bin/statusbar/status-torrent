#!/bin/bash

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -n floatcenter -g 120x50 stig ;;
esac

sum=($(transmission-remote -l | tail -n 1))

speed () {
	rate=$(echo ${sum[$1]} | sd "\..*" "")
	if [ ${#rate} -ge 4 ]
		then
			echo $rate | sd "(.)(.).." '${1}.${2}M'
		else
			echo "$rate""k"
	fi
}

up=$(speed 3)
down=$(speed 4)

runhost=$1

case $runhost in
	dwm) echo "^c#d3a0bc^↑$up ↓$down" ;;
	fvwm) echo "↑$up ↓$down" ;;
esac

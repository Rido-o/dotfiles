#!/bin/sh

rm -r $HOME/.cache/wal &&
wal -i $HOME/.cache/wallpaper.png -n &&
. $HOME/.cache/wal/colors-all
[ -z $BACKGROUND ] && { exit 1; }

# Copy fvwm theme
cp $HOME/.cache/wal/colors-light-fvwm $HOME/.fvwm/themes/light-wal

NAME="wal"
FVWMNAME="light-wal"

# run default scheme
. color-main

restart
